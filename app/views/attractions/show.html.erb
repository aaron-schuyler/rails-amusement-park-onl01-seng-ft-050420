<div class="info">
  <b>Name:</b> <%= @attraction.name %>
  <b>Ticket Requirement:</b> <%= @attraction.tickets %>
  <b>Height Requirement:</b> <%= @attraction.min_height %> Inches
  <b>Nausea Rating:</b> <%= @attraction.nausea_rating %>
  <b>Happiness Rating:</b> <%= @attraction.happiness_rating %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) if current_user.admin %>
  <%= form_for @ride do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id  %>
    <%= f.hidden_field :attraction_id, value: @attraction.id  %>
    <%= f.submit "Go on this ride" %>
  <% end %>

</div>
